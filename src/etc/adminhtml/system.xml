<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="razoyo" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Razoyo</label>
            <tab>general</tab> <!-- This makes it a tab under the General section -->
            <group id="carprofile" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Car Profile</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Car Profile?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="api_url" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API URL</label>
                    <validate>validate-url</validate>
                </field>
            </group>
        </section>
    </system>
</config>
